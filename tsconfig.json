{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*", "layout/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
