
::selection {
  background: $selection-bg;
  color: $selection-color;
}

body {
  position: relative; // Required by scrollspy
  background: $body-bg-color;
  color: $text-color;
  word-spacing: 3px;
  font-size: $font-size-base;
  font-family: $font-family-base;
  line-height: $line-height-base;

  +mobile() {
    padding-right: 0 !important;
  }

  +tablet() {
    padding-right: 0 !important;
  }

  +desktop-large() {
    font-size: $font-size-large;
  }
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
  font-weight: bold;
  font-family: $font-family-headings;
  line-height: 1.5;
}

h2, h3, h4, h5, h6 {
  margin: 20px 0 15px;
}

for headline in (1 .. 6) {
  h{headline} {
    font-size: $font-size-headings-base - $font-size-headings-step * headline;
  }

  +mobile() {
    h{headline} {
      font-size: $font-size-headings-base - $font-size-headings-step * headline - 4px;
    }
  }
}

p {
  margin: 0 0 25px;
}

a {
  border-bottom: 1px solid $grey-dark;
  color: $link-color;
  text-decoration: none;
  word-wrap: break-word;

  &:hover {
    border-bottom-color: $link-decoration-hover-color;
    color: $link-hover-color;
  }
}

blockquote {
  margin: 0;
  padding: 0;
}

img {
  display: block;
  margin: auto;
  max-width: 100%;
  height: auto;
}

hr {
  margin: 40px 0;
  height: 3px;
  border: none;
  background-color: $gray-lighter;
  background-image: repeating-linear-gradient(
    -45deg,
    white,
    white 4px,
    transparent 4px,
    transparent 8px
  );
}

blockquote {
  padding: 0 15px;
  border-left: 4px solid $gray-lighter;
  color: $grey-dim;

  cite::before {
    padding: 0 5px;
    content: '-';
  }
}

dt {
  font-weight: $font-weight-bolder;
}

dd {
  margin: 0;
  padding: 0;
}
