// Custom styles.

body {
  position: relative;
}

body::before {
  content: '';
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;

  filter: opacity(0.7) blur(2px) brightness(0.95);

  background-image: url('../../images/body.jpg');
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-attachment: fixed;
}

/*文章背景*/
.content-wrap {
  background-color: rgba(255, 255, 255, 0.5);
}

.footer-inner {
  color: #000;
}

/*顶部线条*/
.headband {
  display: none;
}

/*文章间分割线*/
.posts-expand .post-eof {
  width: 75%;
}

.site-meta,
.site-brand-wrapper,
.header-inner,
.sidebar,
.sidebar-inner {
  background-color: rgba(255, 255, 255, 0);
}

.site-title {
