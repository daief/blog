// -------------------------------- 小屏幕菜单展示按钮颜色
.btn-bar {
  background-color: #111;
}

// -------------------------------- 中小屏幕站点信息开关
.toggle-index {
  touch-action: none;
  box-sizing: border-box;
  position: fixed;
  top: -100px;
  right: 30px;
  z-index: 1050;
  padding: 0 6px;
  width: initial;
  background: #222;
  font-size: 12px;
  opacity: 0.6;
  color: #fff;
  cursor: pointer;
  text-align: center;
  transform: translateZ(0);
  transition-property: top;
  transition-duration: 0.2s;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
}

.toggle-index.toggle-index-on {
  top: 30px;
}

// -------------------------------- leancloud 功能开启，显示隐藏
.post-meta .leancloud_visitors {
  display: none;
}

@media (min-width: 992px) {
  .toggle-index {
    display: none !important;
  }
}

@media (min-width: 768px) and (max-width: 991px) {
  .back-to-top {
    display: block !important;
  }

  .sidebar {
    display: none !important;
  }

  .sidebar-inner.affix {
    width: 100%;
    background: rgba(255, 255, 255, 0.95);
  }

  .sidebar-inner {
    width: 100%;
  }

  .sidebar.sidebar-on {
    display: flex !important;
    margin-top: 88px;
    width: 100%;
    justify-content: center;
  }
}

@media (max-width: 767px) {
  body::before {
    background-image: url('../../images/body-small.jpg');
  }

  .sidebar {
    display: none !important;
  }

  .sidebar-inner.affix {
    width: 100%;
    background: rgba(255, 255, 255, 0.95);
  }

  .sidebar-inner {
    width: 100%;
  }

  .sidebar.sidebar-on {
    display: flex !important;
    margin-top: 88px;
    width: 100%;
    justify-content: center;
  }

  .back-to-top {
    display: block !important;
  }
}

// -------------------------------- 标签云页面，标签样式
.tag-cloud a {
  display: inline-block;
  text-decoration: none;
  font-weight: 400;
  font-size: 10px;
  /* color: #fff; */
  background-color: #66ccffbf;
  height: 18px;
  line-height: 18px;
  padding: 0 5px 0 10px;
  position: relative;
  border-radius: 0 5px 5px 0;
  margin: 5px 9px 5px 8px;
  font-family: Menlo, Monaco, Andale Mono, lucida console, Courier New,
    monospace;
  transition: all 0.4s;
}
.tag-cloud a::before {
  content: ' ';
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  left: -18px;
  border: 9px solid transparent;
  border-right-color: #66ccffbf;
  transition: all 0.4s;
}
.tag-cloud a::after {
  content: ' ';
  width: 4px;
  height: 4px;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 7px;
  left: 2px;
}
.tag-cloud a:hover {
  transform: scale(1.5);
  background-color: #66ccff;
  z-index: 5;
  color: #fff !important;
}
.tag-cloud a:hover::before {
  border-right-color: #66ccff;
}

