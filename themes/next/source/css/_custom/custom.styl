// Custom styles.
body {
  position: relative;
}

body::before {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  filter: opacity(.7) blur(2px) brightness(.95);
  background-image: url('../../images/body.jpg');
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  content: '';
}

/* 文章背景 */
.content-wrap {
  background-color: rgba(255, 255, 255, .5);
}

.footer-inner {
  color: #000;
}

/* 顶部线条 */
.headband {
  display: none;
}

/* 文章间分割线 */
.posts-expand .post-eof {
  width: 75%;
}

.site-meta, .site-brand-wrapper, .header-inner, .sidebar, .sidebar-inner {
  background-color: rgba(255, 255, 255, 0);
}

.site-title {
  color: #000;
}

.menu-item-active a {
  /* background: rgba(249,249,249,0.5); */
}

// -------------------------------- 小屏幕菜单展示按钮颜色
.btn-bar {
  background-color: #111;
}

// -------------------------------- 中小屏幕站点信息开关
.toggle-index {
  position: fixed;
  top: -100px;
  right: 30px;
  z-index: 1050;
  box-sizing: border-box;
  padding: 0 6px;
  width: initial;
  background: #222;
  color: #fff;
  text-align: center;
  font-size: 12px;
  opacity: .6;
  cursor: pointer;
  transition-delay: 0s;
  transition-timing-function: ease-in-out;
  transition-duration: .2s;
  transition-property: top;
  transform: translateZ(0);
  touch-action: none;
}

.toggle-index.toggle-index-on {
  top: 30px;
}

// -------------------------------- leancloud 功能开启，显示隐藏
.post-meta .leancloud_visitors {
  display: none;
}

@media (min-width: 992px) {
  .toggle-index {
    display: none !important;
  }
}

@media (min-width: 768px) and (max-width: 991px) {
  .back-to-top {
    display: block !important;
  }

  .sidebar {
    display: none !important;
  }

  .sidebar-inner.affix {
    width: 100%;
    background: rgba(255, 255, 255, .95);
  }

  .sidebar-inner {
    width: 100%;
  }

  .sidebar.sidebar-on {
    display: flex !important;
    justify-content: center;
    margin-top: 88px;
    width: 100%;
  }
}

@media (max-width: 767px) {
  body::before {
    background-image: url('../../images/body-small.jpg');
  }

  .sidebar {
    display: none !important;
  }

  .sidebar-inner.affix {
    width: 100%;
    background: rgba(255, 255, 255, .95);
  }

  .sidebar-inner {
    width: 100%;
  }

  .sidebar.sidebar-on {
    display: flex !important;
    justify-content: center;
    margin-top: 88px;
    width: 100%;
  }

  .back-to-top {
    display: block !important;
  }
}

// -------------------------------- 标签云页面，标签样式
.tag-cloud a {
  display: inline-block;
  height: 18px;
  border: 0;
  text-decoration: none;
  font-weight: 400;
  font-size: 14px;
  font-family: Menlo, Monaco, 'Andale Mono', 'lucida console', 'Courier New', monospace, sans-serif;
  line-height: 18px;
  transition: all .4s;

  & > small {
    color: #a9a9b3;
    font-size: 12px;
  }

  &:hover {
    color: orange;
    transform: scale(1.2);
  }
}

// -------------------------------- hitokoto 一言样式
#hitokoto {
  margin-bottom: 20px;
  cursor: pointer;
  transition: all .3s;

  &:hover {
    color: #e44b12;
  }

  .hko-content, .hko-author {
    margin: 0;
    font-family: tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    line-height: 1.35;
  }

  .hko-author {
    margin-top: 5px;
    text-align: right;
  }
}
