{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node20",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@t": ["@types/index"],
      "@t/*": ["@types/*"],
      "@app/*": ["app/*"]
    },
    "importsNotUsedAsValues": "remove",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*", "@types/**/*", "app"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
